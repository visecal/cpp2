@page
@model SubPhim.Server.Pages.Admin.NewUserSettingsModel
@{
    ViewData["Title"] = "Cài đặt Đăng ký mới";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
    var allFeatures = Enum.GetValues<SubPhim.Server.Data.GrantedFeatures>().Where(f => f != SubPhim.Server.Data.GrantedFeatures.None);
    var allApis = Enum.GetValues<SubPhim.Server.Data.AllowedApis>().Where(a => a != SubPhim.Server.Data.AllowedApis.None);
}

<h1>@ViewData["Title"]</h1>
<p class="text-muted">
    Cấu hình các quyền và giới hạn mặc định sẽ được áp dụng cho <strong>tất cả người dùng mới</strong> đăng ký tài khoản (Gói Free).
</p>
<hr />

@if (!string.IsNullOrEmpty(Model.SuccessMessage))
{
    <div class="alert alert-success">@Model.SuccessMessage</div>
}
@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger">@Model.ErrorMessage</div>
}

<form method="post">
    <div class="row">
        <div class="col-lg-8">
            <div class="card mb-4">
                <div class="card-header">
                    <h5><i class="bi bi-sliders"></i> Giới hạn Sử dụng Mặc định</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="FreeTierSettings.DailyVideoCount" class="form-label"></label>
                            <input type="number" asp-for="FreeTierSettings.DailyVideoCount" class="form-control" />
                            <div class="form-text">Nhập -1 để không giới hạn.</div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="FreeTierSettings.DailyTranslationRequests" class="form-label"></label>
                            <input type="number" asp-for="FreeTierSettings.DailyTranslationRequests" class="form-control" />
                            <div class="form-text">Nhập -1 để không giới hạn.</div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="FreeTierSettings.DailySrtLineLimit" class="form-label"></label>
                            <input type="number" asp-for="FreeTierSettings.DailySrtLineLimit" class="form-control" />
                        </div>
                        <!-- === ĐÃ THÊM MỚI === -->
                        <div class="col-md-6 mb-3">
                            <label asp-for="FreeTierSettings.DailyLocalSrtLimit" class="form-label"></label>
                            <input type="number" asp-for="FreeTierSettings.DailyLocalSrtLimit" class="form-control" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="FreeTierSettings.TtsCharacterLimit" class="form-label"></label>
                            <input type="number" asp-for="FreeTierSettings.TtsCharacterLimit" class="form-control" />
                            <div class="form-text">Giới hạn này sẽ được reset hàng ngày cho user Free.</div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card mb-4">
                <div class="card-header">
                    <h5><i class="bi bi-robot"></i> Quyền Truy Cập API Mặc định</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        @foreach (var api in allApis)
                        {
                            <div class="col-md-4">
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" name="FreeTierSettings.AllowedApiAccess" value="@api"
                                           id="api-@api" @(Model.FreeTierSettings.AllowedApiAccess.HasFlag(api) ? "checked" : "")>
                                    <label class="form-check-label" for="api-@api">@api.ToString()</label>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <div class="card mb-4">
                <div class="card-header">
                    <h5><i class="bi bi-toggles2"></i> Quyền Truy Cập Tính Năng Mặc định</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        @foreach (var feature in allFeatures)
                        {
                            <div class="col-md-4">
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" name="FreeTierSettings.GrantedFeatures" value="@feature"
                                           id="feature-@feature" @(Model.FreeTierSettings.GrantedFeatures.HasFlag(feature) ? "checked" : "")>
                                    <label class="form-check-label" for="feature-@feature">@feature.ToString()</label>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-primary btn-lg">
                    <i class="bi bi-save-fill me-2"></i>Lưu Cài Đặt Cho Người Dùng Mới
                </button>
            </div>
        </div>
    </div>
</form>