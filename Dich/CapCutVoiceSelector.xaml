<Window x:Class="subphimv1.Dich.CapCutVoiceSelector"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chọn giọng nói CapCut TTS"
        Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E1E"
        ResizeMode="CanResize">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="BorderBrush" Value="#3F3F46"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Padding" Value="8,5"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#0E639C"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1177BB"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="CancelButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="#3F3F46"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#555555"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0"
                   Text="Chọn giọng nói CapCut TTS"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="#E0E0E0"
                   Margin="0,0,0,20"/>

        <!-- Filters -->
        <Grid Grid.Row="1" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="15"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="15"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="15"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="5"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Category Filter -->
            <TextBlock Grid.Row="0" Grid.Column="0" Text="Danh mục:" Margin="0,0,0,5"/>
            <ComboBox Grid.Row="2" Grid.Column="0"
                      x:Name="CategoryComboBox"
                      SelectionChanged="FilterComboBox_SelectionChanged"/>

            <!-- Gender Filter -->
            <TextBlock Grid.Row="0" Grid.Column="2" Text="Giới tính:" Margin="0,0,0,5"/>
            <ComboBox Grid.Row="2" Grid.Column="2"
                      x:Name="GenderComboBox"
                      SelectionChanged="FilterComboBox_SelectionChanged"/>

            <!-- Language Filter -->
            <TextBlock Grid.Row="0" Grid.Column="4" Text="Ngôn ngữ:" Margin="0,0,0,5"/>
            <ComboBox Grid.Row="2" Grid.Column="4"
                      x:Name="LanguageComboBox"
                      SelectionChanged="FilterComboBox_SelectionChanged"/>

            <!-- Clear Filters Button -->
            <Button Grid.Row="2" Grid.Column="6"
                    Content="Xóa bộ lọc"
                    Click="ClearFilters_Click"
                    Width="120"
                    Style="{StaticResource CancelButton}"/>
        </Grid>

        <!-- Voice List -->
        <Border Grid.Row="2"
                BorderBrush="#3F3F46"
                BorderThickness="1"
                CornerRadius="4"
                Background="#252526">
            <ListView x:Name="VoiceListView"
                      SelectionMode="Single"
                      Background="Transparent"
                      BorderThickness="0"
                      Foreground="#E0E0E0"
                      MouseDoubleClick="VoiceListView_MouseDoubleClick">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Tên giọng nói" Width="250" DisplayMemberBinding="{Binding DisplayName}"/>
                        <GridViewColumn Header="Danh mục" Width="150" DisplayMemberBinding="{Binding Category}"/>
                        <GridViewColumn Header="Giới tính" Width="100" DisplayMemberBinding="{Binding Gender}"/>
                        <GridViewColumn Header="Ngôn ngữ" Width="200" DisplayMemberBinding="{Binding Language}"/>
                        <GridViewColumn Header="Voice ID" Width="180" DisplayMemberBinding="{Binding VoiceId}"/>
                    </GridView>
                </ListView.View>
                <ListView.Resources>
                    <Style TargetType="GridViewColumnHeader">
                        <Setter Property="Background" Value="#2D2D30"/>
                        <Setter Property="Foreground" Value="#E0E0E0"/>
                        <Setter Property="BorderBrush" Value="#3F3F46"/>
                        <Setter Property="BorderThickness" Value="0,0,1,1"/>
                        <Setter Property="Padding" Value="10,8"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                    </Style>
                    <Style TargetType="ListViewItem">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Foreground" Value="#E0E0E0"/>
                        <Setter Property="Padding" Value="5"/>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#0E639C"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2D2D30"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ListView.Resources>
            </ListView>
        </Border>

        <!-- Info Text -->
        <TextBlock Grid.Row="2"
                   x:Name="VoiceCountText"
                   Text="Tổng số: 0 giọng nói"
                   Margin="0,10,0,0"
                   VerticalAlignment="Bottom"
                   HorizontalAlignment="Left"
                   Foreground="#A0A0A0"
                   FontSize="12"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">
            <Button Content="Chọn"
                    Click="SelectButton_Click"
                    Width="120"
                    Margin="0,0,10,0"/>
            <Button Content="Hủy"
                    Click="CancelButton_Click"
                    Width="120"
                    Style="{StaticResource CancelButton}"/>
        </StackPanel>
    </Grid>
</Window>
