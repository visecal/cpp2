@page
@model SubPhim.Server.Pages.Admin.LoginModel

@{
    Layout = null;
    ViewData["Title"] = "Admin Login";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
            background-color: #343a40;
            color: white;
        }

        .login-container {
            width: 100%;
            max-width: 400px;
            padding: 2rem;
            background-color: #212529;
            border-radius: 0.5rem;
            border: 1px solid #495057;
        }

        .form-control {
            background-color: #495057;
            border-color: #6c757d;
            color: white;
        }

            .form-control:focus {
                background-color: #495057;
                border-color: #0d6efd;
                color: white;
                box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
            }

        .form-floating > label {
            color: #adb5bd;
        }

    </style>
</head>
<body>
    <div class="login-container">
        <h2 class="text-center mb-4">Admin Panel Login</h2>

        @* SỬA LẠI: method="get" *@
        <form method="get">
            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-danger">@Model.ErrorMessage</div>
            }

            <div class="form-floating mb-3">
                @* SỬA LẠI: Thêm name="..." thủ công *@
                <input name="Username" class="form-control" placeholder="Tên tài khoản" required />
                <label for="Username">Tên tài khoản</label>
            </div>

            <div class="form-floating mb-4">
                @* SỬA LẠI: Thêm name="..." thủ công *@
                <input name="Password" type="password" class="form-control" placeholder="Mật khẩu" required />
                <label for="Password">Mật khẩu</label>
            </div>

            <button type="submit" class="w-100 btn btn-lg btn-primary">Đăng nhập</button>
        </form>
    </div>
</body>
</html>