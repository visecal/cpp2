                                <textarea name="apiKeyInput.ApiKeys" class="form-control" rows="2" placeholder="Dán các API key Free vào đây..."></textarea>
                            </div>
                            <button type="submit" class="btn btn-secondary w-100">Thêm Key Free</button>
                        </form>
                    </div>
                </div>
                
                <h5 class="mt-2">Danh sách Key Miễn Phí</h5>
                <div class="table-responsive mb-4 flex-grow-1">
                    <table class="table table-striped table-hover table-sm mb-0">
                        <thead>
                            <tr>
                                <th>API Key (ẩn)</th>
                                <th class="text-center">Tokens Đã Dùng</th>
                                <th class="text-center">Requests / Ngày</th>
                                <th class="text-center">Trạng thái</th>
                                <th class="text-center">Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.FreeApiKeys.Any())
                            {
                                @foreach (var keyViewModel in Model.FreeApiKeys)
                                {
                                    var key = keyViewModel.KeyData;
                                    <tr>
                                        <td><code>@keyViewModel.DecryptedApiKey.Substring(0, Math.Min(keyViewModel.DecryptedApiKey.Length, 15))...</code></td>
                                        <td class="text-center">@key.TotalTokensUsed.ToString("N0")</td>
                                        <td class="text-center">@key.RequestsToday</td>
                                        <td class="text-center">
                                            <form method="post" asp-page-handler="ToggleEnabled" asp-route-id="@key.Id" class="d-inline">
                                                <button type="submit" class="btn btn-sm @(key.IsEnabled ? "btn-success" : "btn-secondary")">@(key.IsEnabled ? "ON" : "OFF")</button>
                                            </form>
                                        </td>
                                        <td class="text-center">
                                            <form method="post" asp-page-handler="DeleteKey" asp-route-id="@key.Id" onsubmit="return confirm('Xóa key này?');" class="d-inline">
                                                <button type="submit" class="btn btn-sm btn-danger">Xóa</button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr><td colspan="5" class="text-center p-3">Chưa có API Key miễn phí nào.</td></tr>
                            }
                        </tbody>
                    </table>
                </div>

                <h5 class="mt-auto">Quản lý Model Miễn Phí</h5>
                <div class="mb-3">
                    <label class="form-label">Model đang hoạt động:</label>
                    <p><code class="badge bg-secondary fs-6">@Model.ActiveFreeModelName</code></p>
                </div>
                <div class="mb-3">
                    <h6>Kích hoạt Model Miễn Phí</h6>
                    <form method="post" asp-page-handler="SetActiveFreeModel">
                        @Html.AntiForgeryToken()
                        <div class="input-group">
                            <select name="id" asp-items="@(new SelectList(Model.FreeModels, "Id", "ModelName"))" class="form-select"></select>
                            <button type="submit" class="btn btn-info">Kích hoạt</button>
                        </div>
                    </form>
                </div>
                <div>
                    <h6>Thêm Model Miễn Phí Mới</h6>
                    <form method="post" asp-page-handler="AddFreeModel">
                        @Html.AntiForgeryToken()
                        <div class="input-group">
                            <input name="newModelInput.ModelName" class="form-control" />
                            <button type="submit" class="btn btn-success">Thêm</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>